@model IEnumerable<ws02_MVC.Models.supplierAll.supplier>
@*@model  Tuple<ws02_MVC.Models.supplierAll.supplier, ws02_MVC.Models.supplierAll.supComponent>*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    @* 套用table css *@
<link href="~/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
}

<br />
<div class="container-fluid">

    <!-- Page Heading   有問題那邊還沒做-->
    <h1 class="h3 mb-2 text-gray-800">供應商維護表</h1>
    @*<%--<p class="mb-4">料件表功能包含查詢料件編號、修改，<a target="_blank" href="https://datatables.net">如有問題請點此連結</a>。</p>--%>*@

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 form-inline">
            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>&nbsp;<h4 class="m-0 font-weight-bold text-primary">供應商列表及功能表</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="row">

                    @*<%--search part number start--%>*@
                    <div class="col-sm-12 col-md-8 ">
                        <div id="dataTable_filter" class="dataTables_filter">
                            @*@Model.Item1.*@
                            @*<h6>依表單編號查詢:</h6>
                                <div class="form-inline">
                                    <input type="text" ID="searchTextBox" class="form-control form-control-sm" type="search" runat="server" placeholder="COMP000000" aria-controls="dataTable"/>
                                    <%-- 查詢--%>
                                    <button class="btn btn-primary" id="btncheck" type="button">
                                        <i class="fas fa-search fa-sm"></i>
                                    </button>

                                </div>*@
                            <div class="col-sm-12 col-md-4">
                                <div id="dataTable_create" class="dataTables_filter">
                                    <label>
                                        <br>
                                        <a href="~/TheProject/Create" class="btn btn-success btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-check"></i>
                                            </span>
                                            <span class="text">新增公司資訊</span>
                                        </a>
                                    </label>
                                </div>
                            </div>
                            <br />

                            @*<%-- 查詢text欄位 --%>*@
                        </div>
                    </div>
                    @*<%--search part number end--%>*@
                </div>
                @*<%--table start--%>*@
                <br />
                <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                    @*<%--補table內容--%>*@

                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(s => s.supplierID)</th>
                            <th>@Html.DisplayNameFor(s => s.CompanyName)</th>
                            <th>@Html.DisplayNameFor(s => s.Address)</th>
                            <th>@Html.DisplayNameFor(s => s.Contact)</th>
                            <th>@Html.DisplayNameFor(s => s.DirectTelephone)</th>
                            <th>@Html.DisplayNameFor(s => s.Email)</th>
                            <th>@Html.DisplayNameFor(s => s.ThisDay)</th>
                            <th>功能</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.supplierID)</td>
                                <td>@Html.DisplayFor(m => item.CompanyName)</td>
                                <td>@Html.DisplayFor(m => item.Address)</td>
                                <td>@Html.DisplayFor(m => item.Contact)</td>
                                <td>@Html.DisplayFor(m => item.DirectTelephone)</td>
                                <td>@Html.DisplayFor(m => item.Email)</td>
                                <td>@Html.DisplayFor(m => item.ThisDay)</td>
                                <td>
                                    @Html.ActionLink("詳細", "Details", new { id = item.supplierID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("修改", "Edit", new { id = item.supplierID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("刪除", "Delete", new { id = item.supplierID }, new { onclick = $"return confirm('delete {item.supplierID}?')", @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
                @*<%--table end--%>*@
            </div>
        </div>
    </div>
</div>



@section scripts{
    @* 套用table js *@
<script src="~/Content/vendor/datatables/jquery.dataTables.js"></script>
<script src="~/Content/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script>

        $(function () {
            $('#dataTable').DataTable();
        });
    </script>

}
